<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="Название"
                android:textColor="@color/light_blue"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/name"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/work_sans"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/blue"
                android:textColorHighlight="#344955"
                android:textColorLink="#344955"
                android:textCursorDrawable="@color/blue"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/edit_text_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="Тема"
                android:textColor="@color/light_blue"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/topic"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/work_sans"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/blue"
                android:textColorHighlight="#344955"
                android:textColorLink="#344955"
                android:textCursorDrawable="@color/blue"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/edit_text_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="Участники"
                android:textColor="@color/light_blue"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/find_member"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/work_sans"
                android:layout_marginTop="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="@color/blue"
                android:textColorHighlight="#344955"
                android:textColorLink="#344955"
                android:textCursorDrawable="@color/blue"
                android:textSize="15dp"
                android:hint="Поиск"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/edit_text_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/deep_blue_stroke">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/choose_members"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                tools:listitem="@layout/member_checkbox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="Задачи"
                android:textColor="@color/light_blue"
                android:textSize="15dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/task"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/work_sans_light"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/blue"
                    android:textColorHighlight="#344955"
                    android:textColorLink="#344955"
                    android:textCursorDrawable="@color/blue"
                    android:textSize="16dp" />
                <ImageButton
                    android:id="@+id/add_task"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:background="@color/white"
                    android:src="@drawable/ic_done"/>
            </FrameLayout>

            <ImageView
                android:layout_width="310dp"
                android:layout_height="5dp"
                android:layout_gravity="start"
                android:src="@drawable/edit_text_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/deep_blue_stroke">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/delete_tasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                tools:listitem="@layout/tasks_delete"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingHorizontal="20dp"
                android:layout_gravity="end"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/work_sans_bold"
                android:text="Сохранить/Создать"
                android:textAllCaps="false"
                android:textColor="@color/deep_blue"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>