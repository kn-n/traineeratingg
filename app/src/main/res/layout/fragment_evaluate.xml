<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:gravity="center_vertical"
        android:text="Задание"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/mark1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:fontFamily="@font/work_sans"
            android:text="-1:"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/work_sans"
            android:text="описание"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/mark2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mark1">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:fontFamily="@font/work_sans"
            android:text="0:"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/work_sans"
            android:text="описание"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/mark3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mark2">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:fontFamily="@font/work_sans"
            android:text="1:"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/work_sans"
            android:text="описание"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/mark4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mark3">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:fontFamily="@font/work_sans"
            android:text="2:"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/work_sans"
            android:text="описание"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mark4">

        <LinearLayout
            android:id="@+id/param1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Вовлеченность"
                android:textColor="@color/blue"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="-1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param1mark1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param1mark2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param1mark3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="2"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param1mark4"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/param2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Организованность"
                android:textColor="@color/blue"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="-1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param2mark1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param2mark2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param2mark3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="2"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param2mark4"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/param3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Обучаемость"
                android:textColor="@color/blue"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="-1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param3mark1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param3mark2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param3mark3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="2"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param3mark4"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/param4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Командность"
                android:textColor="@color/blue"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="-1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param4mark1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param4mark2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="1"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param4mark3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/work_sans"
                        android:text="2"
                        android:textColor="@color/blue"
                        android:textSize="18sp"/>
                    <RadioButton
                        android:theme="@style/MyCheckBox"
                        android:id="@+id/param4mark4"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:checked="false"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingHorizontal="20dp"
                android:layout_gravity="end"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/work_sans_bold"
                android:text="Оценить"
                android:textAllCaps="false"
                android:textColor="@color/deep_blue"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>