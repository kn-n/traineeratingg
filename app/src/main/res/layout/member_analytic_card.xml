<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/white_bg"
    android:layout_height="95dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/work_sans_bold"
        android:text="Фамилия Имя"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/work_sans"
        android:text="Место учебы/работы"
        android:textColor="@color/blue"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="Вовлеченность:"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/param1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="Обучаемость:"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/param2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="Органзованность:"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/param3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="Командность:"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/param4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="3"
            android:fontFamily="@font/work_sans"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>