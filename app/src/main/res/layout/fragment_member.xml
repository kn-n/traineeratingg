<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/white_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/work_sans_bold"
            android:text="Приложения для оценки практикантов"
            android:textColor="@color/blue"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="Вовлеченность:"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="3"
                android:id="@+id/param1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="Обучаемость:"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="3"
                android:id="@+id/param2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="Органзованность:"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="3"
                android:id="@+id/param3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="Командность:"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
            <TextView
                android:layout_weight="3"
                android:id="@+id/param4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/work_sans"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        tools:listitem="@layout/event_evaluation"/>

</androidx.constraintlayout.widget.ConstraintLayout>